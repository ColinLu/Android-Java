<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--系统样式-->
    <style name="Media" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--菜案按钮颜色-->
        <item name="android:actionMenuTextColor">@color/media_title_color</item>
        <!--系统动画-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
        <!--背景颜色-->
        <item name="android:windowBackground">@color/media_activity_bg</item>
    </style>
    <!--相册界面-->
    <style name="Media.Activity" parent="Media">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--拍照界面-->
    <style name="Media.Activity.Camera" parent="Media.Activity">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!--预览界面-->
    <style name="Media.Activity.Preview" parent="Media.Activity">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="Media.Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/media_title_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Media.Subtitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/media_title_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Media.AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="Media.Popup" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/media_title_color</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Media.CheckBox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">@dimen/dp_35</item>
        <item name="android:layout_height">@dimen/dp_35</item>
    </style>


    <style name="Media.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="Media.Dialog.Folder" parent="Media.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/Media.Dialog.Folder.Anim</item>
    </style>

    <style name="Media.Dialog.Folder.Anim">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>
</resources>