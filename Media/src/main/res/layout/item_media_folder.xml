<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:background="?android:selectableItemBackground">

    <ImageView
        android:id="@+id/image_item_media"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_6"
        android:contentDescription="@string/media_title"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_camera"
        tools:ignore="VectorDrawableCompat" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/check_item_media_selected"
        style="@style/Media.CheckBox"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_item_media_folder"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/media_title"
        android:textColor="@color/media_item_text_color"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/image_item_media"
        app:layout_constraintRight_toLeftOf="@+id/check_item_media_selected"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_item_media_folder_size"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_20"
        android:ellipsize="end"
        android:gravity="top"
        android:maxLines="1"
        android:text="@string/media_title"
        android:textColor="@color/media_item_text_color"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/text_item_media_folder"
        app:layout_constraintRight_toRightOf="@+id/text_item_media_folder"
        app:layout_constraintTop_toBottomOf="@+id/text_item_media_folder" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:background="@color/media_item_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/image_item_media"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>