<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/app_ripple">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/app_button_checked" />
                    <corners android:radius="@dimen/app_button_height" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/app_button_checked" />
                    <corners android:radius="@dimen/app_button_height" />
                </shape>
            </item>
            <item android:state_checked="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/app_button_checked" />
                    <corners android:radius="@dimen/app_button_height" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/app_button_default" />
                    <corners android:radius="@dimen/app_button_height" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>