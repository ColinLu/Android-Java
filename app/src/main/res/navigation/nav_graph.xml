<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.colin.android.demo.java.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_Home_to_Motion"
            app:destination="@id/MotionFragment" />
    </fragment>
    <fragment
        android:id="@+id/MotionFragment"
        android:name="com.colin.android.demo.java.ui.motion.MotionFragment"
        android:label="@string/motion"
        tools:layout="@layout/fragment_motion">

        <action
            android:id="@+id/action_Motion_to_Home"
            app:destination="@id/HomeFragment" />
    </fragment>
</navigation>