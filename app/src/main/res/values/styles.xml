<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 并且实现了顶部导航栏透明，和底部导航栏颜色填充的话，就需要下边的方法了。
     <item name="android:windowDrawsSystemBarBackgrounds">false</item>-->

    <!--App 整体配置-->
    <style name="App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/navigation_color</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" >@bool/app_status_mode</item>
        <item name="android:forceDarkAllowed" >@bool/app_dark_allowed</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
    </style>

    <!--Activity 默认-->
    <style name="App.Activity" parent="App" />

    <!--Activity 不显示标题-->
    <style name="App.Activity.NoTitle" parent="App.Activity">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <!--状态栏导航栏-->
    <style name="App.Activity.Translucent" parent="App.Activity.NoTitle">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:navigationMode">normal</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    <!--状态栏透明-->
    <style name="App.Activity.Translucent.StatusBar" parent="App.Activity.NoTitle">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationMode">normal</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    <!--导航栏透明-->
    <style name="App.Activity.Translucent.Navigation" parent="App.Activity.NoTitle">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:navigationMode">normal</item>
    </style>
    <!--APP 全屏效果-->
    <style name="App.Activity.Full" parent="App.Activity.NoTitle">
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
    </style>

    <!--启动界面主题-->
    <style name="App.Activity.Splash" parent="App.Activity.Full">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>


    <style name="App.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="contentInsetStart">@dimen/app_margin_default</item>
        <item name="contentInsetEnd">@dimen/app_margin_default</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="titleTextAppearance">@style/Text.Title</item>
        <item name="navigationContentDescription">@string/app_name</item>
        <item name="actionMenuTextColor">@color/app_text_title</item>
        <item name="contentInsetStartWithNavigation">@dimen/dp_0</item>
    </style>

    <style name="App.Toolbar.AppBar" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="App.Toolbar.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">@color/colorBackground</item>
        <item name="android:textSize">@dimen/app_text_default</item>
        <item name="android:textColor">@color/app_text_default</item>
    </style>

    <style name="App.Dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="App.Dialog.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!--点击按钮样式-->
    <style name="App.Button" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_button_height</item>
        <item name="android:textSize">@dimen/app_text_button</item>
        <item name="android:textColor">@color/app_text_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:layout_marginEnd">@dimen/app_margin_default</item>
        <item name="android:layout_marginStart">@dimen/app_margin_default</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_style</item>
    </style>

    <!--默认文本框样式-->
    <style name="App.TextView" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/dp_0</item>
        <item name="android:paddingTop">@dimen/dp_0</item>
        <item name="android:paddingRight">@dimen/dp_0</item>
        <item name="android:paddingBottom">@dimen/dp_0</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/app_text_default</item>
        <item name="android:textColor">@color/app_text_default</item>
        <item name="android:textColorHint">@color/app_text_hint</item>
    </style>

    <!--默认输入框样式-->
    <style name="App.EditText" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_edit_height</item>
        <item name="android:background">@null</item>
        <item name="android:hint">@string/text</item>
        <item name="android:textSize">@dimen/app_text_default</item>
        <item name="android:textColor">@color/app_text_default</item>
        <item name="android:textColorHint">@color/app_text_hint</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/dp_0</item>
        <item name="android:paddingTop">@dimen/dp_0</item>
        <item name="android:paddingRight">@dimen/dp_0</item>
        <item name="android:paddingBottom">@dimen/dp_0</item>
    </style>
    <!--图片-->
    <style name="App.ImageView" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">@dimen/app_title_height</item>
        <item name="android:layout_height">@dimen/app_title_height</item>
        <item name="android:background">@null</item>
        <item name="android:description">@string/app_name</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!--默认文本框样式-->
    <style name="App.RecyclerView" parent="Theme.MaterialComponents.DayNight">
        <item name="android:id">@id/recycler_list</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--默认文本框样式-->
    <style name="App.SwipeRefresh" parent="Theme.MaterialComponents.DayNight">
        <item name="android:id">@id/refresh_list</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--默认文本框样式-->
    <style name="App.CardView" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/app_item_height</item>
        <item name="cardCornerRadius">@dimen/app_radius_default</item>
        <item name="cardElevation">@dimen/app_elevation_default</item>
        <item name="cardMaxElevation">@dimen/app_elevation_default</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">@color/app_item</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!--默认文本框样式-->
    <style name="App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@null</item>
        <item name="tabUnboundedRipple">false</item>
        <item name="tabRippleColor">@color/transparent</item>
        <item name="tabTextColor">@color/app_text_hint</item>
        <item name="tabSelectedTextColor">@color/app_text_title</item>
        <item name="tabTextAppearance">@style/Text.Title</item>
    </style>

    <style name="Text">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/app_text_default</item>
        <item name="android:textColor">@color/app_text_default</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:textSize">@dimen/app_text_title</item>
        <item name="android:textColor">@color/app_text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Subtitle" parent="Text">
        <item name="android:textSize">@dimen/app_text_small</item>
        <item name="android:textColor">@color/app_text_title</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
