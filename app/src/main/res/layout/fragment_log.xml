<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.method.LogFragment">

    <Button
        android:id="@+id/mButtonLogI"
        style="@style/Theme.App.Button"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/item_title_height"
        android:text="Log I"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mButtonLogV"
        style="@style/Theme.App.Button"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/button_height"
        android:text="Log V"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mButtonLogI" />

    <Button
        android:id="@+id/mButtonLogD"
        style="@style/Theme.App.Button"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/button_height"
        android:text="Log D"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mButtonLogV" />

    <Button
        android:id="@+id/mButtonLogW"
        style="@style/Theme.App.Button"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/button_height"
        android:text="Log W"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mButtonLogD" />

    <Button
        android:id="@+id/mButtonLogA"
        style="@style/Theme.App.Button"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/button_height"
        android:text="Log A"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mButtonLogW" />

    <Button
        android:id="@+id/mButtonLogE"
        style="@style/Theme.App.Button"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/button_height"
        android:text="Log E"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mButtonLogA" />

    <Button
        android:id="@+id/mButtonLogThrowable"
        style="@style/Theme.App.Button"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/button_height"
        android:text="Log Throwable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mButtonLogA" />
</androidx.constraintlayout.widget.ConstraintLayout>